fw.runScript( fw.currentScriptDir + '/lib/lib.js' )

var exportAll = function() {

  var dom = fw.getDocumentDOM()
  fw.saveDocument( dom )

  if ( !FibHelper.getResourceDirs() ) return false

  for( var i = 0; i < dom.pagesCount; i++ ) {
    dom.changeCurrentPage( i )
    FibHelper.setCurrentDOM()
    FibExporter.exportDOM( FibHelper.dom )
  }
}

try {
  exportAll()
} catch(e) {
  alert([ e.lineNumber, e.message ])
}
